<main class="auth">
<h1>Sign in </h1>
<%= form_tag do %>

    <%if @message %>
        <div class="error">
            <%= @message %>
        </div>    
    <% end %>

  <div class="field">
    <%= text_field_tag :login, nil, placeholder: 'Enter your email', type: 'email' %>
  </div>

  <div class="field">
    <%= password_field_tag :password, nil, placeholder: 'Choose a password' %>
  </div>

  <div class="actions">
    <%= submit_tag 'Submit' %>
  </div>
<% end %>

<%= link_to 'Sign Up', new_user_path  %>


</main>
